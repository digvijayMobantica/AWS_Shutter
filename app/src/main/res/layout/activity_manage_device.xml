<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayoutd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundSettings"
    tools:context=".mShutter.ManageDeviceActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_shutter" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:background="@drawable/bg_square_white"
            android:padding="@dimen/dimen_10dp">

            <EditText
                android:id="@+id/etEndPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/clear_end_point"
                android:background="@android:color/transparent"
                android:text="azur83gz1t6vj.iot.us-east-1.amazonaws.com"
                android:imeOptions="actionNext"
                android:maxLines="2"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18sp" />

            <ImageButton
                android:id="@+id/clear_end_point"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_action_cancel"
                android:backgroundTint="@color/colorGreen" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/bg_square_white"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp">

            <EditText
                android:id="@+id/etPoolId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/clear_pool_id"
                android:background="@android:color/transparent"
                android:text=""
                android:imeOptions="actionNext"
                android:maxLines="2"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18sp" />

            <ImageButton
                android:id="@+id/clear_pool_id"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_action_cancel"
                android:backgroundTint="@color/colorGreen" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/bg_square_white"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp">

            <EditText
                android:id="@+id/etThingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/clear_thing_name"
                android:background="@android:color/transparent"
                android:text="HomAuto_NVir"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18sp" />

            <ImageButton
                android:id="@+id/clear_thing_name"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_action_cancel"
                android:backgroundTint="@color/colorGreen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSubmit"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:minWidth="@dimen/dimen_200dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen_18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>